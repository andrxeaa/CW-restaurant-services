{
  "name": "delivery-microservice",
  "version": "1.0.0",
  "description": "Microservicio de Delivery para gestión de asignación y actualización de estados de pedidos",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "clean": "rm -rf dist",
    "deploy": "sam deploy --guided",
    "deploy:prod": "sam deploy --config-env prod",
    "local:api": "sam local start-api",
    "local:invoke": "sam local invoke"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@aws-sdk/client-sfn": "^3.450.0",
    "@aws-sdk/client-eventbridge": "^3.450.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.450.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.125",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.6",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.5",
    "aws-sam-cli": "^1.100.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "delivery",
    "microservice",
    "aws",
    "lambda",
    "step-functions",
    "eventbridge",
    "dynamodb"
  ],
  "author": "",
  "license": "ISC"
}
